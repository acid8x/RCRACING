<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selLives"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0">

    <TextView
        android:id="@+id/tvLivesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#3333"
        android:gravity="center"
        android:text="@string/paramsLives"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"/>

    <TextView
        android:id="@+id/tvLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLivesTitle"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"/>

    <SeekBar
        android:id="@+id/seekBarLives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvLivesTitle"
        android:layout_alignStart="@+id/tvLivesTitle"
        android:layout_below="@+id/tvLives"
        android:layout_margin="10dp"
        android:max="10"/>

    <Button
        android:id="@+id/buttonReturnLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvLivesTitle"
        android:layout_below="@+id/seekBarLives"
        android:layout_margin="10dp"
        android:background="@drawable/buttonarrow"/>

    <Button
        android:id="@+id/buttonNextLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvLivesTitle"
        android:layout_below="@+id/seekBarLives"
        android:layout_margin="10dp"
        android:scaleX="-1"
        android:scaleY="-1"
        android:background="@drawable/buttonarrow"/>

</RelativeLayout>