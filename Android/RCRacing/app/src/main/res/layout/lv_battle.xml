<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="2dp"
    android:background="@xml/list_selector">

    <ImageView
        android:id="@+id/ivTruck"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_margin="2dp"
        android:contentDescription="@string/imageView"
        app:srcCompat="@drawable/truck"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivTruck"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivTruck"
        android:layout_toEndOf="@+id/ivTruck"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="true"
                android:textSize="26sp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/tvKill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/kills"
                android:gravity="center_vertical|end"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textAlignment="gravity"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/tvDeath"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/deaths"
                android:gravity="center_vertical|end"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textAlignment="gravity"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/tvLive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/heart"
                android:gravity="center_vertical|end"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textAlignment="gravity"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>