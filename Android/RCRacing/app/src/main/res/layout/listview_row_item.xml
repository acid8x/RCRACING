<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@xml/list_selector">

    <ImageView
        android:id="@+id/ivLogo"
        android:contentDescription="@string/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/truck"/>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>

            <TextView
                android:id="@+id/tvLive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/heart2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvKill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/kills2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>

            <TextView
                android:id="@+id/tvDeath"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/deaths2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>

            <TextView
                android:id="@+id/tvGates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gates2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>

            <TextView
                android:id="@+id/tvLaps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/laps2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:textAlignment="gravity"/>
        </TableRow>

    </TableLayout>

</LinearLayout>