<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.igeneric.rcracing">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RaceTypeActivity"
            android:theme="@android:style/Theme.Holo.Light.Panel">
        </activity>
        <activity
            android:name=".LapsActivity"
            android:theme="@android:style/Theme.Holo.Light.Panel">
        </activity>
        <activity
            android:name=".GatesActivity"
            android:theme="@android:style/Theme.Holo.Light.Panel">
        </activity>
        <activity
            android:name=".KillsActivity"
            android:theme="@android:style/Theme.Holo.Light.Panel">
        </activity>
        <activity
            android:name=".LivesActivity"
            android:theme="@android:style/Theme.Holo.Light.Panel">
        </activity>
        <service android:name=".BTService"/>
        <receiver android:name=".broadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_DATA_AVAILABLE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>